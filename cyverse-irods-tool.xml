<tool id="cyverse_irods" name="CyVerse interaction via iRODS" version="0.1.0">
    <description>
        This Galaxy tool is used to upload files to G-OnRamp's Data Commons store on CyVerse
    </description>
    <requirements>
        <requirement type="package" version="0.7.0">python-irodsclient</requirement>
        <requirement type="package">cyverse-irods</requirement>
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python $__tool_directory__/CyRODS.py --upload --localsource $data_to_upload --remotedestination "/iplant/home/shared/G-OnRamp_hubs/community/"
        #if $timestamp == "y":
          --timestamp
        #end if
    ]]></command>
    <inputs>
        <param
            name="data_to_upload"
            type="data"
            format="jbrowsehub,trackhub"
            label="Data to upload"
        />
<!--       <param name="user_or_shared" type="select" label="Select User or Shared (Community) Store">
            <option value="user">User Store</option>
            <option value="share">Shared Store</option>
        </param> 
-->
        <param
            name="destpath"
            type="text"
            label="Subdirectory to install to"
        />
        <param name="timestamp" type="select" label="Place Timestamp in directory name" display="checkboxes">
          <option value="y">Timestamp Directory</option>
        </param>
        <param
            name="user"
            type="text"
            label="CyVerse user name"
        />
        <param
            name="pass"
            type="text"
            label="CyVerse user password"
        />
    </inputs>
</tool>
